{
  "name": "BeesFrischeErlebenTheme",
  "author": "Internetservice Steffen Winde",

  "views": [
     "@Storefront",
     "@Plugins",
     "@BeesFrischeErlebenTheme"
  ],
  "style": [
    "app/storefront/src/scss/overrides.scss",
    "@Storefront",
    "app/storefront/src/scss/base.scss"
  ],
  "script": [
    "@Storefront",
    "app/storefront/dist/storefront/js/bees-frische-erleben-theme.js"
  ],
  "asset": [
    "@Storefront",
    "app/storefront/src/assets"
  ],
  "config": {

    "fields": {
      "footer-background-color": {
        "label": {
          "en-GB": "Footer Background Color",
          "de-DE": "Footer Background Color"
        },
        "type": "color",
        "value": "#7185a4"
      }
    },
    "sw-logo-desktop": {
      "type": "media",
      "value": "app/storefront/dist/assets/logo/fe-logo.png"
    },
    "sw-logo-tablet": {
      "type": "media",
      "value": "app/storefront/dist/assets/logo/fe-logo.png"
    },
    "sw-logo-mobile": {
      "type": "media",
      "value": "app/storefront/dist/assets/logo/fe-logo.png"
    },
    "sw-logo-share": {
      "type": "media",
      "value": "app/storefront/dist/assets/logo/fe-logo.png"
    },
    "sw-logo-favicon": {
      "type": "media",
      "value": "app/storefront/dist/assets/logo/fe-logo.png"
    }
  }
}